---
interface Props {
  snowflakeCount?: number;
}

const { snowflakeCount = 50 } = Astro.props;
---

<div class="snowfall">
  {Array.from({ length: snowflakeCount }).map(() => (
    <div class="snowflake">‚ùÑ</div>
  ))}
