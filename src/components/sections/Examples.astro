---
import Snowfall from "@components/Snowfall.astro";
import CodeBlock from "@ui/CodeBlock.astro";

const examples = [
  {
    title: "Heavy Blizzard",
    props: {
      snowflakeCount: 100,
      speed: [3, 8],
      wind: [-2, 2],
      radius: [0.5, 3],
    },
    code: `<Snowfall 
  snowflakeCount={100}
  speed={[3, 8]}
  wind={[-2, 2]}
  radius={[0.5, 3]}
/>`,
  },
  {
    title: "Gentle Flurries",
    props: {
      snowflakeCount: 40,
      speed: [0.5, 1.5],
      wind: [-0.5, 0.5],
      radius: [1, 2],
      opacity: [0.4, 0.8],
    },
    code: `<Snowfall 
  snowflakeCount={40}
  speed={[0.5, 1.5]}
  wind={[-0.5, 0.5]}
  radius={[1, 2]}
/>`,
  },
  {
    title: "Confetti Party",
    props: {
      color: "#EC4899", // Pink
      enable3DRotation: true,
      snowflakeCount: 50,
      speed: [2, 4],
      rotationSpeed: [-5, 5],
      radius: [2, 6],
    },
    code: `<Snowfall 
  color="#EC4899"
  enable3DRotation={true}
  snowflakeCount={50}
  rotationSpeed={[-5, 5]}
  radius={[2, 6]}
/>`,
  },
];
---

<section id="examples" class="py-24 relative">
  <div class="max-w-7xl mx-auto px-4 md:px-6">
    <h2 class="text-3xl md:text-5xl font-bold mb-12 text-center">Examples</h2>

    <div class="grid lg:grid-cols-3 gap-8">
      {
        examples.map((example) => (
          <div class="flex flex-col gap-4">
            <div class="relative h-64 rounded-2xl overflow-hidden border border-white/10 bg-[#0a0e27]">
              <Snowfall {...example.props} />
              <div class="absolute bottom-0 left-0 right-0 p-4 bg-gradient-to-t from-black/80 to-transparent">
                <h3 class="text-white font-bold">{example.title}</h3>
              </div>
            </div>
            <CodeBlock code={example.code} lang="astro" />
          </div>
        ))
      }
    </div>
  </div>
</section>
