---
interface Props {
  variant?: "default" | "outline" | "success" | "warning";
  class?: string;
}

const { variant = "default", class: className } = Astro.props;

const variants = {
  default: "bg-white/10 text-white border border-white/10",
  outline: "bg-transparent border border-white/20 text-gray-300",
  success: "bg-green-500/10 text-green-400 border border-green-500/20",
  warning: "bg-yellow-500/10 text-yellow-400 border border-yellow-500/20",
};
---

<span
  class:list={[
    "inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium backdrop-blur-sm",
    variants[variant],
    className,
  ]}
>
  <slot />
</span>
