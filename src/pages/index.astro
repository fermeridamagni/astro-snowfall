<style>
  :root {
    --color-bg: #0a0e27;
    --color-text: #e0e6ff;
    --color-accent: #4f5b93;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family:
      system-ui,
      -apple-system,
      sans-serif;
    background: var(--color-bg);
    color: var(--color-text);
    min-height: 100vh;
    overflow-x: hidden;
  }

  .snowfall-container {
    position: fixed;
    inset: 0;
    width: 100vw;
    height: 100vh;
    pointer-events: none;
    z-index: 0;
  }

  main {
    position: relative;
    z-index: 1;
    max-width: 800px;
    margin: 0 auto;
    padding: 4rem 2rem;
  }

  h1 {
    font-size: 3.5rem;
    font-weight: 800;
    margin-bottom: 1rem;
    background: linear-gradient(135deg, #dee4fd 0%, #a8b5ff 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  p {
    font-size: 1.25rem;
    color: var(--color-accent);
    margin-bottom: 3rem;
    line-height: 1.6;
  }

  .features {
    background: rgba(79, 91, 147, 0.1);
    border: 1px solid rgba(222, 228, 253, 0.1);
    border-radius: 12px;
    padding: 2rem;
    backdrop-filter: blur(10px);
  }

  h2 {
    font-size: 2rem;
    margin-bottom: 1.5rem;
    color: var(--color-text);
  }

  ul {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  li {
    font-size: 1.1rem;
    line-height: 1.6;
    padding-left: 0.5rem;
  }

  @media (max-width: 768px) {
    h1 {
      font-size: 2.5rem;
    }

    main {
      padding: 2rem 1.5rem;
    }

    .features {
      padding: 1.5rem;
    }
  }
</style>
