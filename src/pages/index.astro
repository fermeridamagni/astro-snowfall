---
import Snowfall from "../components/Snowfall.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro Snowfall</title>
  </head>
  <body>
    <div class="snowfall-container">
      <Snowfall
        color="#dee4fd"
        snowflakeCount={200}
        speed={[1, 3]}
        wind={[-0.5, 2]}
        radius={[0.5, 3]}
        enable3DRotation={true}
      />
    </div>

    <main>
      <h1>Astro Snowfall</h1>
      <p>
        A canvas-based snowfall background animation built with Astro and
        TypeScript
      </p>

      <div class="features">
        <h2>Features</h2>
        <ul>
